{
  "name": "npm-scripts-static-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./dist",
    "build:js": "mkdir dist && cd dist && mkdir js && cd ../ & babel ./src/js/main.js -o ./dist/js/bundle.js && browserify ./dist/js/bundle.js -o ./dist/js/bundle.js",
    "build:ejs": "ejs-cli --base-dir src/ejs/pages '/**/**.ejs' --out ./dist --options src/data/**.json",
    "build:sass": "node-sass --include-path scss src/scss/style.scss --source-map true ./dist/css/style.css --output-style compressed",
    "build:images": "imagemin src/images/* -o dist/images",
    "build": "npm run clean & npm-run-all -p build:*",
    "format": "prettier-stylelint --quiet --write ./src/scss/**.scss",
    "serve": "browser-sync start --server --serveStatic ./dist --files './dist/css/*.css, ./dist/**/*.html'",
    "watch": "nodemon --ext js,ejs,scss --watch src -x 'npm run build:js & npm run build:ejs & npm run build:sass'",
    "dev": "npm run format & npm run watch & npm run serve",
    "reference:visual": "backstop reference",
    "test:visual": "backstop test",
    "approve:visual": "backstop approve"
  },
  "keywords": [],
  "author": "Daiki Narushima <daikinarushima@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.1.0",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babelify": "^10.0.0",
    "backstopjs": "^3.5.16",
    "browser-sync": "^2.24.7",
    "browserify": "^16.2.2",
    "ejs-cli": "^2.0.1",
    "imagemin-cli": "^3.0.0",
    "jquery": "^3.3.1",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "prettier-stylelint": "^0.4.2",
    "rimraf": "^2.6.2",
    "stylelint-config-standard": "^18.2.0"
  },
  "dependencies": {}
}
